generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

//model user
model User {
  user_id  String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String @unique
  password String
  otp      OTP?
  role     Role   @default(USER)
}

// type
type OTP {
  code      Int
  expiredAt DateTime
}

// liste enumeration
enum Role {
  SUPERADMIN
  ADMIN
  USER
  STUDENT
}
